extends ../layout/common 

block content
    h1 Login

    if errors
        each err in errors
            .alert.alert-danger= err
    form(method="POST")
        .form-group
            label(for="email") Email                                   
            input#email.form-control(type="text", name="email", value=valued ? valued.email: "")
        .form-group
            label(for="password") Phone    
            input#password.form-control(type="text", name="password", value=valued ? valued.password: "")
        button.btn.btn-danger Login