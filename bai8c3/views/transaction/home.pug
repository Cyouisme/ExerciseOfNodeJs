extends ../layout/common 

block content
  h1 HELLO, MY NAME IS TRANSACTION!!!
  button(class="btn btn-outline-warning d-inline ml-2")
    a(href='/') HOMEMANAGE
  button(class="btn btn-outline-warning ml-2")
    a(href="/transactions/create") CreatesTrans
  table(class="table ml-2")
    thead
      tr
        th UserId
        th BookId
        th Complete
    tbody
      each tran in transactions
        tr
          if tran.iscomplete=== false
              td= tran.userId
              td= tran.bookId
              td 
                a(href="/transactions/"+tran.id+"/complete") Complete
          else if tran.iscomplete=== true
