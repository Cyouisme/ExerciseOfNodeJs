extends ../layout/common 

block content
    h1.pb-5 Hi My Name is Users :))
    .d-flex.align-items-center
        button(class="btn btn-outline-warning ml-2")
            a(href="/users/create") CreatesUser
        form.ml-auto(action="/users/user",method="GET")
            input(type="text",name="q",value=valued,class="btn btn-outline-secondary")
            button.btn.btn-outline-warning.mt-2 search
    table(class="table ml-2")
        thead
            tr
                th Avatar
                th Name
                th View
                th Update
                th Delete
        tbody
            each user in users
                tr
                    td
                        img.rounded-circle(src=user.avatar,width="64")
                    td= user.name
                    td 
                        a.btn.btn-outline-warning(href="/users/view/"+user.id) View
                    td 
                        a.btn.btn-outline-warning(href="/users/update/"+user.id) Update
                    td    
                        a.btn.btn-outline-danger(href="/users/"+user.id+"/delete") Delete