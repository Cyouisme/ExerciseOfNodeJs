extends ../layout/common 
 
block content
    h1 Hello, My name is CreateBooks!!!
    if errors   
        each err in errors
            .alert.alert-danger= err
    button(class="btn btn-outline-warning ml-2")
        a(href='/books') HOME
    form(action="/books/create", method="POST")
        .form-group
            label(for="title") Title: 
            input#title.form-control(type="text",name='title',value=valued ? valued.title:"")
        .form-group  
            label(for="description") Description: 
            input#description.form-control(type="text",name='description',value=valued ? valued.description:"")
        button.btn.btn-danger Create